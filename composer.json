{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "tomstark/laravel",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "laravel/framework": "^12.0",
        "laravel/sanctum": "^4.0",
        "laravel/tinker": "^2.10.1",
        "nunomaduro/essentials": "^0.1",
        "spatie/eloquent-sortable": "^4.5"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "larastan/larastan": "^3.0",
        "laravel/breeze": "^2.3",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.24",
        "laravel/sail": "^1.41",
        "laravel/telescope": "^5.13",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "pestphp/pest": "^4.1",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "pestphp/pest-plugin-type-coverage": "^4.0",
        "rector/rector": "^2.1",
        "roave/security-advisories": "dev-latest",
        "spatie/laravel-ray": "^1.40"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite --kill-others"
        ],
        "lint": "echo 'Script: lint' && pint",
        "refactor": "echo 'Script: refactor' && php -d memory_limit=-1 ./vendor/bin/rector",
        "test:type-coverage": "echo 'Script: test:type-coverage' && php -d memory_limit=-1 ./vendor/bin/pest --type-coverage --min=100",
        "test:type-coverage-report": "php -d memory_limit=-1 ./vendor/bin/pest --type-coverage --min=100 --type-coverage-json=type-coverage-report.json",
        "test:unit": "echo 'Script: test:unit' && php -d memory_limit=-1 ./vendor/bin/pest --parallel --coverage --min=100",
        "test:unit-report": "echo 'Script: test:unit' && php -d memory_limit=-1 ./vendor/bin/pest --parallel --coverage --min=100 --coverage-html=ignoredDir/coverage",
        "test:lint": "echo 'Script: test:lint' && pint --test",
        "test:types": "echo 'Script: test:types' && php -d memory_limit=-1 ./vendor/bin/phpstan",
        "test:refactor": "echo 'Script: test:refactor' && php -d memory_limit=-1 ./vendor/bin/rector --dry-run",
        "test": [
            "@php artisan config:clear --ansi",
            "@test:type-coverage",
            "@test:unit",
            "@test:lint",
            "@test:refactor",
            "@test:types"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "laravel/telescope"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
